{
  "name": "PartnerToken",
  "action": {},
  "version": "2",
  "manifest_version": 3,
  "description": "Pulls your partner center token",
  "icons": { "128" : "icon.png"},
  "homepage_url": "http://github.com/DantesDungeon",
  "host_permissions": [
    "*://*.microsoft.com/*"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "cookies",
    "contextMenus",
    "clipboardWrite"
  ],
  "content_scripts": [ // this is what you need to add
      {
         "matches": [
            "<all_urls>"
         ],
         "js": ["content.js"]
      }
   ],
  "background": {
    "service_worker": "background.js"
  }
}
